generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String           @id @default(uuid())
  name             String
  email            String           @unique
  avatarUrl        String?
  oauthProvider    String           @default("github")
  oauthId          String           @unique
  createdAt        DateTime         @default(now())
  receivedMessages ChatMessage[]    @relation("MessageRecipient")
  messages         ChatMessage[]    @relation("MessageSender")
  feedbackGiven    Feedback[]       @relation("FeedbackGiven")
  feedbackReceived Feedback[]       @relation("FeedbackReceived")
  githubActivities GitHubActivity[]
  googleDocsData   GoogleDocsData?
  presenceLogs     PresenceLog[]
  projectsCreated  Project[]        @relation("ProjectsCreated")
  memberships      ProjectMember[]
  projectSync      ProjectSync[]
  refreshTokens    RefreshToken[]
  tasks            Task[]
  oauthAccounts    UserOAuth[]
}

model UserOAuth {
  id             String    @id @default(uuid())
  userId         String
  provider       String
  providerUserId String
  accessTokenEnc String
  tokenExpiresAt DateTime?
  scopes         String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
  @@index([userId])
}

model RefreshToken {
  id              String    @id @default(cuid())
  userId          String
  hashedToken     String
  expiresAt       DateTime
  revokedAt       DateTime?
  replacedByToken String?
  createdAt       DateTime  @default(now())
  lastUsedAt      DateTime  @default(now())
  userAgent       String?
  ipAddress       String?
  location        String?
  deviceName      String?
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([hashedToken])
}

model Project {
  id                  String            @id @default(uuid())
  name                String
  status              ProjectStatus     @default(ACTIVE)
  description         String?
  githubRepo          String
  createdById         String
  createdAt           DateTime          @default(now())
  lastActive          DateTime?
  githubRepoId        Int?
  githubWebhookSecret String?
  chatMessages        ChatMessage[]
  feedbacks           Feedback[]
  githubData          GitHubActivity[]
  insights            Insight[]
  presenceLogs        PresenceLog[]
  createdBy           User              @relation("ProjectsCreated", fields: [createdById], references: [id])
  members             ProjectMember[]
  projectSync         ProjectSync[]
  pullRequest         PullRequest[]
  repoCommits         RepoCommit[]
  tasks               Task[]
  webhookDelivery     WebhookDelivery[]

  @@index([createdById])
  @@index([createdAt])
}

model RepoCommit {
  id           String    @id @default(cuid())
  projectId    String
  sha          String    @unique
  authorName   String?
  authorEmail  String?
  message      String
  url          String?
  authoredAt   DateTime?
  addedLines   Int?
  deletedLines Int?
  raw          Json?
  createdAt    DateTime  @default(now())
  project      Project   @relation(fields: [projectId], references: [id])

  @@index([projectId])
}

model PullRequest {
  id          String    @id @default(cuid())
  projectId   String
  prNumber    Int
  title       String
  authorId    String?
  authorLogin String?
  state       String
  merged      Boolean   @default(false)
  mergedAt    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  raw         Json?
  project     Project   @relation(fields: [projectId], references: [id])

  @@unique([projectId, prNumber])
  @@index([projectId])
}

model ProjectSync {
  id         String     @id @default(cuid())
  projectId  String
  userId     String
  status     SyncStatus @default(PENDING)
  error      String?
  createdAt  DateTime   @default(now())
  finishedAt DateTime?
  retried    Int        @default(0)
  project    Project    @relation(fields: [projectId], references: [id])
  user       User       @relation(fields: [userId], references: [id])
}

model WebhookDelivery {
  id          String                @id @default(cuid())
  projectId   String?
  deliveryId  String                @unique
  event       String
  status      WebhookDeliveryStatus @default(PENDING)
  error       String?
  attempts    Int                   @default(0)
  payload     Json
  receivedAt  DateTime              @default(now())
  processedAt DateTime?
  retried     Int                   @default(0)
  project     Project?              @relation(fields: [projectId], references: [id])

  @@index([projectId])
}

model ProjectMember {
  id        String       @id @default(cuid())
  userId    String
  projectId String
  role      ProjectRole  @default(MEMBER)
  status    MemberStatus @default(PENDING)
  joinedAt  DateTime?    @default(now())
  project   Project      @relation(fields: [projectId], references: [id])
  user      User         @relation(fields: [userId], references: [id])

  @@unique([userId, projectId])
  @@index([projectId])
  @@index([userId])
}

model Task {
  id          String       @id @default(cuid())
  priority    TaskPriority @default(MEDIUM)
  projectId   String
  title       String
  description String?
  weight      Int          @default(1)
  status      TaskStatus   @default(TODO)
  assigneeId  String?
  createdAt   DateTime     @default(now())
  completedAt DateTime?
  score       Float?
  progress    Int          @default(0)
  updatedAt   DateTime     @updatedAt
  assignee    User?        @relation(fields: [assigneeId], references: [id])
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id          String   @id @default(cuid())
  projectId   String
  senderId    String
  message     String
  type        String   @default("text")
  aiLabel     String?
  createdAt   DateTime @default(now())
  recipientId String?
  project     Project  @relation(fields: [projectId], references: [id])
  recipient   User?    @relation("MessageRecipient", fields: [recipientId], references: [id])
  sender      User     @relation("MessageSender", fields: [senderId], references: [id])
}

model GitHubActivity {
  id            String   @id @default(cuid())
  projectId     String
  userId        String
  commitCount   Int      @default(0)
  prCount       Int      @default(0)
  linesAdded    Int      @default(0)
  linesDeleted  Int      @default(0)
  weekStart     DateTime
  commitDetails Json?
  project       Project  @relation(fields: [projectId], references: [id])
  user          User     @relation(fields: [userId], references: [id])

  @@unique([projectId, userId, weekStart])
}

model GoogleDocsData {
  id           String    @id @default(uuid())
  userId       String    @unique
  editsCount   Int?      @default(0)
  lastActivity DateTime?
  user         User      @relation(fields: [userId], references: [id])
}

model Insight {
  id          String   @id @default(cuid())
  projectId   String
  generatedAt DateTime @default(now())
  type        String
  summary     String
  metrics     Json?
  project     Project  @relation(fields: [projectId], references: [id])
}

model Feedback {
  id            String   @id @default(cuid())
  projectId     String
  fromUserId    String
  toUserId      String
  effort        Int
  collaboration Int
  reliability   Int
  comment       String?
  aiFlag        String?
  createdAt     DateTime @default(now())
  fromUser      User     @relation("FeedbackGiven", fields: [fromUserId], references: [id])
  project       Project  @relation(fields: [projectId], references: [id])
  toUser        User     @relation("FeedbackReceived", fields: [toUserId], references: [id])
}

model PresenceLog {
  id           String         @id @default(cuid())
  projectId    String
  userId       String
  status       PresenceStatus @default(OFFLINE)
  sessionStart DateTime
  sessionEnd   DateTime?
  duration     Int?
  isActive     Boolean        @default(false)
  project      Project        @relation(fields: [projectId], references: [id])
  user         User           @relation(fields: [userId], references: [id])

  @@index([userId, projectId, isActive])
  @@index([sessionStart])
}

enum PresenceStatus {
  ONLINE
  IDLE
  OFFLINE
  FOCUSED
}

enum ProjectRole {
  LEADER
  MEMBER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum MemberStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
  COMPLETED
}

enum WebhookDeliveryStatus {
  PENDING
  COMPLETED
  FAILED
  PROCESSING
  RETRYING
}

enum SyncStatus {
  PENDING
  COMPLETED
  FAILED
  PROCESSING
  RETRYING
}
