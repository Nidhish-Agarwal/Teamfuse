generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String           @id @default(uuid())
  name             String
  email            String           @unique
  avatarUrl        String?
  oauthProvider    String           @default("github")
  oauthId          String           @unique
  createdAt        DateTime         @default(now())
  messages         ChatMessage[]
  feedbackGiven    Feedback[]       @relation("FeedbackGiven")
  feedbackReceived Feedback[]       @relation("FeedbackReceived")
  githubActivities GitHubActivity[]
  googleDocsData   GoogleDocsData?
  presenceLogs     PresenceLog[]
  projectsCreated  Project[]        @relation("ProjectsCreated")
  memberships      ProjectMember[]
  refreshTokens    RefreshToken[]
  tasks            Task[]
  oauthAccounts    UserOAuth[]
}

model UserOAuth {
  id             String    @id @default(uuid())
  userId         String
  provider       String
  providerUserId String
  accessTokenEnc String
  tokenExpiresAt DateTime?
  scopes         String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
  @@index([userId])
}

model RefreshToken {
  id              String    @id @default(cuid())
  userId          String
  hashedToken     String
  expiresAt       DateTime
  revokedAt       DateTime?
  replacedByToken String?
  createdAt       DateTime  @default(now())
  lastUsedAt      DateTime  @default(now())
  userAgent       String?
  ipAddress       String?
  location        String?
  deviceName      String?
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([hashedToken])
}

model Project {
  id           String           @id @default(uuid())
  name         String
  status       ProjectStatus    @default(ACTIVE)
  description  String?
  githubRepo   String
  createdById  String
  createdAt    DateTime         @default(now())
  lastActive   DateTime?
  chatMessages ChatMessage[]
  feedbacks    Feedback[]
  githubData   GitHubActivity[]
  insights     Insight[]
  presenceLogs PresenceLog[]
  createdBy    User             @relation("ProjectsCreated", fields: [createdById], references: [id])
  members      ProjectMember[]
  tasks        Task[]

  @@index([createdById])
  @@index([createdAt])
}

model ProjectMember {
  id        String       @id @default(cuid())
  userId    String
  projectId String
  role      ProjectRole  @default(MEMBER)
  status    MemberStatus @default(PENDING)
  joinedAt  DateTime?    @default(now())
  project   Project      @relation(fields: [projectId], references: [id])
  user      User         @relation(fields: [userId], references: [id])

  @@unique([userId, projectId])
  @@index([projectId])
  @@index([userId])
}

model Task {
  id          String       @id @default(cuid())
  priority    TaskPriority @default(MEDIUM)
  projectId   String
  title       String
  description String?
  weight      Float        @default(1.0)
  status      TaskStatus   @default(PENDING)
  assigneeId  String?
  createdAt   DateTime     @default(now())
  completedAt DateTime?
  score       Float?
  assignee    User?        @relation(fields: [assigneeId], references: [id])
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id        String   @id @default(cuid())
  projectId String
  senderId  String
  message   String
  type      String   @default("text")
  aiLabel   String?
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id])
  sender    User     @relation(fields: [senderId], references: [id])
}

model GitHubActivity {
  id            String   @id @default(cuid())
  projectId     String
  userId        String
  commitCount   Int      @default(0)
  prCount       Int      @default(0)
  linesAdded    Int      @default(0)
  linesDeleted  Int      @default(0)
  weekStart     DateTime
  commitDetails Json?
  project       Project  @relation(fields: [projectId], references: [id])
  user          User     @relation(fields: [userId], references: [id])

  @@unique([projectId, userId, weekStart])
}

model GoogleDocsData {
  id           String    @id @default(uuid())
  userId       String    @unique
  editsCount   Int?      @default(0)
  lastActivity DateTime?
  user         User      @relation(fields: [userId], references: [id])
}

model Insight {
  id          String   @id @default(cuid())
  projectId   String
  generatedAt DateTime @default(now())
  type        String
  summary     String
  metrics     Json?
  project     Project  @relation(fields: [projectId], references: [id])
}

model Feedback {
  id            String   @id @default(cuid())
  projectId     String
  fromUserId    String
  toUserId      String
  effort        Int
  collaboration Int
  reliability   Int
  comment       String?
  aiFlag        String?
  createdAt     DateTime @default(now())
  fromUser      User     @relation("FeedbackGiven", fields: [fromUserId], references: [id])
  project       Project  @relation(fields: [projectId], references: [id])
  toUser        User     @relation("FeedbackReceived", fields: [toUserId], references: [id])
}

model PresenceLog {
  id           String         @id @default(cuid())
  projectId    String
  userId       String
  status       PresenceStatus @default(OFFLINE)
  sessionStart DateTime
  sessionEnd   DateTime?
  duration     Int?
  isActive     Boolean        @default(false)
  project      Project        @relation(fields: [projectId], references: [id])
  user         User           @relation(fields: [userId], references: [id])

  @@index([userId, projectId, isActive])
  @@index([sessionStart])
}

enum PresenceStatus {
  ONLINE
  IDLE
  OFFLINE
  FOCUSED
}

enum ProjectRole {
  LEADER
  MEMBER
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum MemberStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
  COMPLETED
}
